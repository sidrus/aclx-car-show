<p id="notice"><%= notice %></p>

<h1>Listing Car Shows</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Start</th>
      <th>End</th>
    </tr>
  </thead>

  <tbody>
    <% @car_shows.each do |car_show| %>
      <tr>
        <td><%= link_to car_show.name, car_show %></td>
        <td><%= car_show.start %></td>
        <td><%= car_show.end %></td>        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Car Show', new_car_show_path, class: 'btn btn-secondary btn-sm' %>
